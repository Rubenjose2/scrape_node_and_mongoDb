<table class="striped">
  <thead>
    <tr>
      <th data-field="id">News Headline</th>
      <th data-field="name">Link</th>
      <th data-field="price">Add a Note</th>
    </tr>
  </thead>
  <tbody>

    {{#each article}}
    <tr>
      <td>{{this.title}}</td>
      <td>
        <a href={{this.link}}>
          <i class="material-icons">link</i>
        </a>
      </td>
      {{#if this.note}}
      <td>
        <button data-id="{{this._id}}" class="waves-effect waves-light btn notes" href="#modal2" >Look the Note</button>
      </td>
      {{else}}
      <td>
        <button data-id="{{this._id}}" class="waves-effect waves-light btn orange" href="#modal1">Add a note</button>
      </td>
      {{/if}}
    </tr>
    {{/each}}

  </tbody>
</table>

<!-- Modal Structure -->
<div id="modal1" class="modal">
  <div class="modal-content">
    <h4>Note</h4>
    <form id="form_notes">
      <div class="input-field col s12">
        <input id="article_id" type="hidden">
        <textarea id="note" class="materialize-textarea"></textarea>
        <label for="textarea1">Please insert your notes</label>
      </div>
    </form>
  </div>

  <div class="modal-footer">
    <a href="#!" class=" modal-action modal-close waves-effect waves-red btn-flat">Disagree</a>
    <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat" id="agree">Agree</a>
  </div>
</div>

  <div id="modal2" class="modal bottom-sheet">
    <div class="modal-content" id="modal-notes">

    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Agree</a>
    </div>
  </div>
</div>